    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        //For text input
        var quotes = ["My voice is my password. verify me", "You can get in without your password","My name is unknown to you",];
        var numberOfQuotes = quotes.length;
        var currentIndex = 0;

        function displayNextQuote() {
            document.getElementById("pharse").value = quotes[currentIndex];
            currentIndex = (currentIndex + 1) % numberOfQuotes;
        }
        setInterval(displayNextQuote, 5000);

        //For Audio record
        function startRecording() {
            var countdown = 15; // 15 seconds recording
            var audioChunks = [];
            var mediaRecorder = null;
            var options = { mimeType: 'audio/webm' };
            $('.pharse__input').show();
            $('.progress__page').hide();
            navigator.mediaDevices.getUserMedia({ audio: true })
                .then(function (stream) {
                    mediaRecorder = new MediaRecorder(stream, options);
                    mediaRecorder.start();

                    setTimeout(function () {
                        mediaRecorder.stop();
                        stream.getTracks().forEach(track => track.stop());
                        submitForm();
                    }, countdown * 1000);

                    mediaRecorder.addEventListener("dataavailable", function (event) {
                        audioChunks.push(event.data);
                    });

                    mediaRecorder.addEventListener("stop", function () {
                        var blob = new Blob(audioChunks, { type: 'audio/webm' });
                        var formData = new FormData();
                        formData.append('File', blob);
                        formData.append('EmployeeID', document.getElementById('EmployeeID').value);
                        formData.append('Email', document.getElementById('Email').value);

                        $.ajax({
                            type: "POST",
                            url: $('#uploadForm').attr('action'),
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (data) {
                                $('#modalContent').html(data);
                                $('#myModal').modal('show');
                            },
                            error: function () {
                                console.log('Error processing audio');
                            }
                        });
                    });
                })
                .catch(function (error) {
                    console.log('Error starting recording:', error);
                });
        }
    </script>
