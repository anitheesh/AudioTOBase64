    <script>
        $(document).ready(function () {
            var result = '@result'; 

            
            if (result === "Success") {
                $('.progress__page').hide();
                $('.fail__page').hide();
                $('.success__page').show();
                $('.pharse__input').hide();
            } 
            else if (result === "Fail") {
                $('.progress__page').hide();
                $('.fail__page').show();
                $('.success__page').hide();
                $('.pharse__input').hide();
            }
            else{
                $('.progress__page').show();
                $('.fail__page').hide();
                $('.success__page').hide();
            }
        });
    </script>

    <div class="progress__page" style="display:block">
            <div class="upload-form">
